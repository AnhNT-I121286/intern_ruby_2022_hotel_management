<%= render "layouts/header" %>
<section class="signup-section" id="signup">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5">
      <%= form_tag rooms_path, html: {class: "form-signup"}, method: :get do |f| %>
        <div class="col-md-10 col-lg-8 mx-auto text-center">
          <i class="far fa fa-search fa-2x mb-2 text-white"></i>
          <h2 class="text-white mb-5"><%= t ".search" %></h2>
          <div class="row input-group-newsletter">
            <div class="row">
              <%= text_field_tag :description, nil, placeholder: t(".enter_description"), class: "form-control" %>
              <%= label :name, t(".start_date"), class: "label_align" %>
              <%= date_field_tag :start_date, DateTime.now.to_date, min: DateTime.now.to_date, class:"form-control" %>
              <%= label :name, t(".end_date"), class: "label_align" %>
              <%= date_field_tag :end_date, Settings.day.day_from_now.days.from_now.to_date, min: Settings.day.day_from_now.days.from_now.to_date, class:"form-control" %>
              <div class="col"><button class="btn btn-primary margin-button2" id="submitButton" type="submit"><%= t ".search_button" %></button></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= render @rooms %>
<%== pagy_bootstrap_nav @pagy %>
<%= render "layouts/footer" %>
