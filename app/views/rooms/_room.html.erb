<section class="projects-section bg-light" id="projects">
  <div class="container px-4 px-lg-5">
    <div class="row gx-0 mb-5 mb-lg-0 justify-content-center">
      <div class="col-lg-4">
        <% room.images.each do |image| %>
          <%= image_tag image, class: "img-fluid" %>
        <% end %>
      </div>
      <div class="col-lg-5">
        <div class="bg-white h-100 project">
          <div class="d-flex h-100">
            <div class="project-text w-100 text-lg-left">
              <h4 class="text-white"><%= link_to room.name, room_path(room) %></h4>
              <p class="star"><span> <%= sanitize render_star(room.rate_avg), attributes: %w(class data-icon) %> </span></p>
              <span class="city"><%= room.description %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="bg-white h-100 project">
          <div class="d-flex h-100">
            <div class="project-text w-100 text-lg-left">
              <h4 class="text-white"><%= link_to room.name, room %></h4>
              <p class="star"><span> <%= sanitize render_star(room.rate_avg), attributes: %w(class data-icon) %> </span></p>
              <span class="city"><%= room.description %></span>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>
