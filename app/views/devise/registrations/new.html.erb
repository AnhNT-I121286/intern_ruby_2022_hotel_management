<section class="signup-section" id="signup">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5">
      <div class="col-md-10 col-lg-8 mx-auto text-center">
        <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
        <h2 class="text-white mb-5"><%= t ".login" %></h2>
          <div class="row input-group-newsletter">
            <%= form_for(:user, as: resource_name, url: user_registration_path) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">
                <%= f.label :name %><br />
                <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
              </div>

              <div class="row">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t(".enter_email") %>
              </div>

              <div class="row">
                <%= f.label :phone %><br />
                <%= f.text_field :phone, autofocus: true, autocomplete: "name", class: "form-control", placeholder: t(".enter_phone") %>
              </div>

              <div class="row">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t ".character" %>)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t(".enter_password") %>
              </div>

              <div class="row">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t(".enter_confirm_password") %>
              </div>

              <div class="actions">
                <%= f.submit t(".confirm") %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</section>
