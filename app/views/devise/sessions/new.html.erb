<%= render "layouts/header" %>
<section class="signup-section" id="signup">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5">
      <div class="col-md-10 col-lg-8 mx-auto text-center">
        <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
        <h2 class="text-white mb-5"><%= t ".login" %></h2>
          <div class="row input-group-newsletter">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t(".enter_email") %>
              </div>
              <div class="row">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t(".enter_password") %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, t(".remember_me") %>
                </div>
              <% end %>
              <div class="actions">
                <%= f.submit t(".submit"), class: "btn btn-primary" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</section>
<%= render "layouts/footer" %>
